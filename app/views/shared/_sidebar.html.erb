<%# sidenav %>
<div class="offcanvas offcanvas-end" data-bs-scroll="true" tabindex="-1" id="offcanvasWithBothOptions" aria-labelledby="offcanvasWithBothOptionsLabel">
  <div class="offcanvas-header">
    <h5 class="offcanvas-title" id="offcanvasWithBothOptionsLabel"></h5>
    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas" aria-label="Close"></button>
  </div>
  <div class="offcanvas-body position-relative">
    <div class="sidebar-list ">
      <p> <%= link_to '🏡 Properties ', properties_path %> </p>
      <hr class="spacer">
      <p> <%= link_to '👨‍👩‍👧 Tenancies ' , tenancies_path %> </p>
      <hr class="spacer">
      <p> <%= link_to '📋 Tasks ', tasks_path %> </p>
      <hr class="spacer">
      <p> <%= link_to '📂 Documents ', documents_path %> </p>
    </div>

    <p> <%= link_to 'Home', root_path, class: "position-absolute mb-3", style: "bottom: 16px; left: 16px"  %> </p>
    <%= link_to  destroy_user_session_path, data: {turbo_method: :delete}, class: "position-absolute mb-3", style: "bottom: 16px; right: 16px" do %>
    <p>
      <i class="fas fa-sign-out-alt"></i> Log out
    </p>
    <% end %>
  </div>
</div>
