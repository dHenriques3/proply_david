<%# sidenav %>
<div class="offcanvas offcanvas-end" data-bs-scroll="true" tabindex="-1" id="offcanvasWithBothOptions" aria-labelledby="offcanvasWithBothOptionsLabel">
  <div class="offcanvas-header">
    <h5 class="offcanvas-title" id="offcanvasWithBothOptionsLabel"></h5>
    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas" aria-label="Close"></button>
  </div>
  <div class="offcanvas-body position-relative">
    <div class="sidebar-list ">

      <%= link_to properties_path do %>
        <p>
        <i class="fa-solid fa-house-chimney text-light" style="margin-right: 4px;"></i>
        Properties
        </p>
      <% end %>

      <hr class="spacer">
      <%= link_to tenancies_path do %>
        <p>
          <i class="fa-solid fa-people-group text-light" style="margin-right:8px;"></i> Tenancies
        </p>
      <% end %>

      <hr class="spacer">
      <%= link_to tasks_path do%>
        <p>
          <i class="fa-solid fa-list-check text-light" style="margin-right:8px;"></i> Tasks
        </p>
      <% end %>

      <hr class="spacer">
      <p>
        <%= link_to documents_path do %>
          <i class="fa-regular fa-folder-open text-light" style="margin-right:8px;"></i> Documents
        <% end %>
      </p>
    </div>

    <p> <%= link_to 'Home', root_path, class: "position-absolute mb-3", style: "bottom: 16px; left: 16px"  %> </p>
    <%= link_to  destroy_user_session_path, data: {turbo_method: :delete}, class: "position-absolute mb-3", style: "bottom: 16px; right: 16px" do %>
    <p>
      <i class="fas fa-sign-out-alt"></i> Log out
    </p>
    <% end %>
  </div>
</div>
